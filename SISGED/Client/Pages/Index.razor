@page "/"
@inject HttpClient Http
@inject IRepository  repository
@attribute [Authorize(Roles = "admin,OrientacionLegal,ArchivosExnotarios,MesaPartes,SecretariaGeneral,JuntaDirectiva,TramiteDocumentario,TribunalHonor")]
@layout MainLayout

@if (layout.cargasesion == true)
{
    @if (layout.sesion.usuario.tipo.Equals("cliente"))
    {
        <SISGED.Client.Pages.Solicitudes.GestionarSolicitud></SISGED.Client.Pages.Solicitudes.GestionarSolicitud>
    }
    else
    {
        <style>
            * {
                color: white
            }

            h1 {
                color: white;
            }
        </style>
        <SISGED.Client.Pages.Samples.WorkEnvironment.WorkEnvironment></SISGED.Client.Pages.Samples.WorkEnvironment.WorkEnvironment>
    }

}

@code{
    [CascadingParameter] protected MainLayout layout { get; set; }


}
