    List<string> nombres = new List<string>();
    public bool abrirDialogo = false;
    public void openDialog() { abrirDialogo = true; }
    public void closeDialog() { abrirDialogo = false; }
    int paso=1;
    int subpaso = 0;
    String typeDocument = "OficioBPN";

