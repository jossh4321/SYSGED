                </MatTab>
            </MatTabGroup>
        </EditForm>
    }
</div>

@code {
    //Variables de sesion
    [CascadingParameter] WorkEnvironment workspace { get; set; }
    [CascadingParameter(Name = "SesionUsuario")] protected Sesion sesion { get; set; }

    //Datos del formulario
    [Parameter] public EventCallback<ExpedienteBandejaDTO> AumentarBandeja { get; set; }
    private ResolucionDTO resolucion = new ResolucionDTO();
    private EditContext _editContext;
    private string imagenTemporal;
    private List<string> imagenTemporal2 = new List<string>();
    List<string> nombres = new List<string>();
    private bool loadprocess = false;
    private bool firstLoad = true;

    protected override async Task OnInitializedAsync()
    {
        firstLoad = true;
        resolucion.contenidoDTO.participantes = new List<Participante>() { new Participante() { index = 0 } };
        resolucion.contenidoDTO.Urlanexo = new List<string>();
        _editContext = new EditContext(resolucion);
        var httpResponse = await repository.Get<ResolucionDTO>($"api/documentos/documentord?iddoc={workspace.expedienteseleccionado.documento.id}");
        if (!httpResponse.Error)
        {
            resolucion = (ResolucionDTO)httpResponse.Response;
            _editContext = new EditContext(resolucion);
            StateHasChanged();
        }
        else
        {

        }
        foreach (string u in resolucion.contenidoDTO.Urlanexo)
        {
            if (!string.IsNullOrWhiteSpace(u))
            {
                imagenTemporal2.Add(u);
            }
        }
        resolucion.contenidoDTO.Urlanexo.Clear();
        if (!string.IsNullOrEmpty(resolucion.contenidoDTO.data))
        {
            imagenTemporal = resolucion.contenidoDTO.data;
            resolucion.contenidoDTO.data = null;
        }
        firstLoad = false;
    }

    private void ImagenSeleccionada(string imagenbase64)
    {
        resolucion.contenidoDTO.data = imagenbase64;
    }

    private void ImagenSeleccionada2(string imagenbase64)
    {
        resolucion.contenidoDTO.Urlanexo.Add(imagenbase64);
    }

    private void FileName(string imagenbase64)
    {
        nombres.Add(imagenbase64);
    }

    private async Task RemoveFile(string file, int imagen64)
    {
        nombres.Remove(file);
        resolucion.contenidoDTO.Urlanexo.RemoveAt(imagen64);
        StateHasChanged();
    }

    private void addParticipante()
    {
        resolucion.contenidoDTO.participantes.Add(new Participante() { index = (resolucion.contenidoDTO.participantes.Count) });
        StateHasChanged();
    }
    private void removeParticipante(int index)
    {
        resolucion.contenidoDTO.participantes.RemoveAt(index);
        StateHasChanged();
    }

    void KeyUp(ChangeEventArgs e, string memberName, object val)
    {
        var property = val.GetType().GetProperty(memberName);
        property.SetValue(val, e.Value.ToString());
        var fi = new FieldIdentifier(val, memberName);
        _editContext.NotifyFieldChanged(fi);
    }

    public async Task handleValidSubmit()
    {
        loadprocess = true;
        if (resolucion.contenidoDTO.data != "" && resolucion.contenidoDTO.data != null)
        {
            ExpedienteWrapper expedienteWrapper = new ExpedienteWrapper();
            expedienteWrapper.documento = resolucion;
            expedienteWrapper.idexpediente = workspace.expedienteseleccionado.idexpediente;
            expedienteWrapper.idusuarioactual = sesion.usuario.id;
            expedienteWrapper.documentoentrada = workspace.expedienteseleccionado.documento.id;
            var httpResponse = await repository.Put<ExpedienteWrapper>($"api/documentos/actualizarDocumentoR", expedienteWrapper);
            if (!httpResponse.Error)
            {

                ContenidoResolucion contr = new ContenidoResolucion();
                contr.titulo = resolucion.contenidoDTO.titulo;
                contr.descripcion = resolucion.contenidoDTO.descripcion;
                contr.participantes = resolucion.contenidoDTO.participantes.Select(x => x.nombre).ToList();
                contr.sancion = resolucion.contenidoDTO.sancion;
                contr.fechafinaudiencia = resolucion.contenidoDTO.fechafinaudiencia;
                contr.fechainicioaudiencia = resolucion.contenidoDTO.fechainicioaudiencia;
                contr.url = resolucion.contenidoDTO.data;

                ExpedienteBandejaDTO expedientebandeja = new ExpedienteBandejaDTO();
                expedientebandeja = workspace.expedienteseleccionado;
                expedientebandeja.documento.id = resolucion.id;
                expedientebandeja.documento.tipo = resolucion.tipo;
                expedientebandeja.documento.historialcontenido = resolucion.historialcontenido;
                expedientebandeja.documento.historialproceso = resolucion.historialproceso;
                expedientebandeja.documento.contenido = contr;
                expedientebandeja.documento.estado = resolucion.estado;
                expedientebandeja.documentosobj.Add(expedientebandeja.documento);
                Item itemSalida = new Item()
                {
                    nombre = expedientebandeja.tipo,
                    valor = expedientebandeja,
                    icono = "alarm_add",
                    descripcion = ((DocumentoDTO)expedientebandeja.documento).tipo,
                    currentPlace = "workspace",
                    originPlace = "inputs",
                    cliente = expedientebandeja.cliente,
                    itemstatus = "registrado"
                };
                workspace.UpdateDocRegistrado(itemSalida);
                workspace.UpdateTools("Modificar Documento");
                DocumentoDTO documentoDTO = new DocumentoDTO();
                documentoDTO.id = resolucion.id;
                documentoDTO.tipo = resolucion.tipo;
                documentoDTO.estado = resolucion.estado;
                documentoDTO.contenido = JsonConvert.SerializeObject(contr);
                documentoDTO.historialcontenido = resolucion.historialcontenido;
                documentoDTO.historialproceso = resolucion.historialproceso;
                documentoDTO.urlanexo = resolucion.urlanexo;
                workspace.expedienteseleccionado.documentosobj.Add(documentoDTO);
                workspace.expedienteseleccionado.documento = documentoDTO;
                StateHasChanged();
                await swalfire.successMessage("Resolución modificada correctamente");
            }
            else
            {
                await swalfire.errorMessage("Error en el servidor, intentelo de nuevo");
            }
        }
        else
        {
            await swalfire.errorMessage("Debe subir un PDF obligatoriamente");
        }
        loadprocess = false;
    }

    public void handleInvalidSubmit()
    {
        loadprocess = false;
        swalfire.errorMessage("Por favor, Verifique los Datos Ingresados");
    }

}