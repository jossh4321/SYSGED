    public void AbrirDialogoVisualizacionPaso(DocumentoPasoDTO2 context)
    {
        DocumentoPasoDTO2 docpaso = context;
        documentopaso = docpaso;
        rendermodpasodocumento = true;
        dialogoVisualizacionPasoDocumento = true;
