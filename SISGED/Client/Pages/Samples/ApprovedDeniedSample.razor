<link rel="stylesheet" href="css/check_cross.css"/>

@if (tipo == "approved")
{
    <svg class="checkmark addClass" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 52 52">
        <circle class="checkmark__circle addClass" cx="26" cy="26" r="25" fill="none" />
        <path class="checkmark__check addClass" fill="none" d="M14.1 27.2l7.1 7.2 16.7-16.8" />
    </svg>
}
else
{
    <svg class="crossmark addClass animateElement" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 52 52">
        <circle class="crossmark__circle addClass animateElement" cx="26" cy="26" r="25" fill="none" />
        <path class="cross__path cross__path--right addClass animateElement" fill="none" d="M16,16 l20,20" />
        <path class="cross__path cross__path--left addClass animateElement" fill="none" d="M16,36 l20,-20" />
    </svg>
}

@code {
    [Parameter] public string tipo { get; set; }
}
