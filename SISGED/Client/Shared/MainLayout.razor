    public List<Item> obtenerListaEntradas(List<ExpedienteBandejaDTO> listaentrada)
    {
        if(listaentrada.ElementAt(0).tipo != null)
        {
            return listaentrada.Select(x => new Item()
            {
                nombre = x.tipo,
                valor = x,
                icono = "alarm_add",
                descripcion = ((DocumentoDTO)x.documento).tipo,
                currentPlace = "inputs",
                originPlace = "inputs",
